<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:visibility="visible">

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="309dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Mes informations bancaires"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numCarte"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:ems="15"
        android:maxLength="16"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNum" />

    <TextView
        android:id="@+id/textNum"
        android:layout_width="158dp"
        android:layout_height="22dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="192dp"
        android:text="NumÃ©ro de carte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInfo" />

    <EditText
        android:id="@+id/cvv"
        android:layout_width="152dp"
        android:layout_height="38dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:maxLength="3"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCvv" />

    <EditText
        android:id="@+id/dateExp"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:layout_marginStart="21dp"
        android:ems="10"
        android:maxLength="7"
        android:inputType="datetime"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textExp" />

    <TextView
        android:id="@+id/textExp"
        android:layout_width="149dp"
        android:layout_height="20dp"
        android:layout_marginStart="23dp"
        android:text="Date d'expiration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numCarte" />

    <TextView
        android:id="@+id/textCvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="144dp"
        android:text="CVV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numCarte" />

    <Button
        android:id="@+id/butPay"
        android:layout_width="85dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:text="Payer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>